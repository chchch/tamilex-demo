{
	"name": "material-ui-color-components",
	"version": "0.3.0",
	"description": "Color components (ColorPicker) for React Material-Ui. No dependencies. It uses Hooks and support RGBA, HSVA, and more !",
	"main": "index.js",
	"types": "index.d.ts",
	"repository": "https://github.com/mikbry/material-ui-colorpicker.git",
	"author": "Mik <mik@miklabs.com>",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf dist && mkdir dist",
		"build": "yarn clean &  cross-env NODE_ENV=production rollup -c && packito",
		"build-storybook": "build-storybook -c .storybook -o public",
		"storybook": "start-storybook -p 9005 -c .storybook",
		"lint": "$(yarn bin)/eslint src",
		"test": "cross-env NODE_ENV=test  jest",
		"coverage": "cross-env NODE_ENV=test  jest --coverage --colors"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
		},
		"commitlint": {
			"extends": [
				"@commitlint/config-conventional"
			]
		}
	},
	"peerDependencies": {
		"@material-ui/core": "^4.9.5",
		"material-ui-popup-state": "^1.5.3",
		"prop-types": "15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"styled-components": "^5.0.1"
	},
	"dependencies": {},
	"jest": {
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest",
			"^.+\\.mdx$": "@storybook/addon-docs/jest-transform-mdx"
		},
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx"
		],
		"moduleNameMapper": {
			"\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules",
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/assetsTransformer.js"
		},
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!src/index.js",
			"!<rootDir>/node_modules/",
			"!<rootDir>/config/"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/test/setup.js"
		]
	}
}